<h2>All Posts</h2>

<table class="table table-striped col-md-12" id="posts">
  <thead>
    <tr>
      <th>Item</th>
      <th>Description</th>
      <th>Price</th>
      <th>User</th>
      <th>Email</th>
    </tr>
  </thead>
  <tbody>
    <%= @posts.each do |post| %>
      <tr>
        <td>
          <%= post.item %>
        </td>
        <td>
          <%= post.description %>
        </td>
        <td>
          <%= post.price %>
        </td>
        <td>
          <%= post.user %>
        </td>
        <td>
          <%= post.email %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
<%= link_to 'Add new post', new_post_path, :class => 'btn btn-primary' %>

<%= @posts %>
