<h2>All Posts</h2>

<%= form_tag posts_path, method: :get, id: 'filter_form' do %>
  <% @all_categories.each do |category| %>
    <div class="form-check  form-check-inline">
      <%= label_tag "categories[#{category}]", category, class: 'form-check-label' %>
      <%= check_box_tag "categories[#{category}]", "1",  @categories_to_show.include?(category), class: 'form-check-input' %>
    </div>
  <% end %>
  <label for="keyword_form">Search:</label>
  <input type="text" id="keyword" name="keyword">
  <label for="min_price_form">MIN:</label>
  <input type="text" id="min_price" name="min_price">
  <label for="max_price_form">MAX:</label>
  <input type="text" id="max_price" name="max_price">
  <%= submit_tag 'Refresh', id: 'categories_submit', class: 'btn btn-primary'%>
<% end %>

<% if false %>
<%= session[:user_id] %>
<br>
<%= image_tag session[:image] %>
<%= form_for @user, html: { multipart: true } do |form| %>
<%= form.label :image%>
  <%= form.file_field :image%>
  <%= form.submit %>
<% end %>
<% end %>
<br>
<div class="container">
  <div class="row">
    <% @posts.each do |post| %>
      <div class="col-md-4  mb-4   d-flex align-items-stretch">
        <div class="card" style="width: 22rem;">
          <div class="card-body d-flex flex-column">
            <h5 class="card-title"><%= post.item %></h5>
            <p class="card-text"><%= post.description %></p>
            <div class="mt-auto">
            <div class="card-text"><%= post.user %> </div>
            <div class="card-text">  <%= post.email %> </div>
            <br>
            <% if post.bid %>
            <% if post.start_bid == post.current_bid %>
                <div class="card-text ">Starting Bid: <b>$<%= post.start_bid %> </b>
            <% else %>
                <div class="card-text ">Current Bid: <b>$<%= post.current_bid %> </b>
            <% end %>
                <form action="/bids" method="POST">
                  <input type ="hidden" name="authenticity_token" value="<%=form_authenticity_token%>">
                  <input class='form-control' type ="text" name="bid[amount]" placeholder="Bid amount">
                  <input class='form-control' type ="hidden" name="bid[product_id]" placeholder="Bid amount" value =<% post.id %>>
                <% if post.start_bid == post.current_bid %>
                    <small id="emailHelp" class="form-text text-muted">Enter US $<%= post.start_bid %> or more</small>
                <% else %>
                    <small id="emailHelp" class="form-text text-muted">Enter a value greater than $<%= post.current_bid %></small>
                <% end %>
                  <button class= 'btn btn-primary' type="submit" name="submit" class="submit">Place a bid</button>
                </form>
              </div>

            <% end %>


            <% if post.buy_now %>
            <br>
              <div class="card-text ">Price: <b>$<%= post.price %> </b> <button type="button" class="btn btn-primary">Buy it now</button> </div>
            <% end %>
            </div>
      <!--      <a href="#" class="btn btn-primary mt-auto  align-self-start">Go somewhere</a> -->
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>

